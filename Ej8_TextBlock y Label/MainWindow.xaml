<Window x:Class="Ej8_TextBlock_y_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ej8_TextBlock_y_Label"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="20" TextWrapping="Wrap" Margin="10">
            <Span Foreground="Blue">
                <Run Text="Este es un " />
                <Run Text="ejemplo" Foreground="Red"/>
                <Run Text=" de cómo " />
                <Run Text="Span" FontWeight="Bold" Foreground="Green"/>
                <Run Text=" permite incluir diferentes elementos, como un " />
                <Hyperlink NavigateUri="https://www.elmundo.es/" RequestNavigate="Hyperlink_RequestNavigate" FontWeight="Bold" TextDecorations="Underline">enlace</Hyperlink>
                <Run Text="."/>
            </Span>
            <LineBreak/>
            <Run Text="Run" FontStyle="Italic" Foreground="Purple"/>
            <Run Text="solo aplica estilos a su propio texto."/>
        </TextBlock>
    </Grid>
</Window>
